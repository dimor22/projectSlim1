{% block extrajs %}

    <script>window.map = {
            map_type: 'ROADMAP',
            map_zoom: 15,
            map_style: 'blackwhite',
            map_scrollable: 'on',
            marker: 'show',
            label: ['Nova Interiors'],
            address: '',
            latlng : ['36.1646035,-115.203597'],
            center_latlng: '',
            markerURL: 'assets/images/marker.png',
            auto_center: true,
        };</script>

    <script src="https://maps.googleapis.com/maps/api/js?sensor=false"></script>
    <script src="assets/js/map.min.js"></script>

    <!-- app specific js -->
    <script src="public/js/app.js"></script>

    <!-- form validation -->
    <script>

        function validateEmail(email) {
            var emailReg = /^([\w-\.]+@([\w-]+\.)+[\w-]{2,4})?$/;
            return emailReg.test( email );
        }

        $('#submitBtn').click(function (e) {
            e.preventDefault();
            $('input').css('border', '1px solid rgba(0, 0, 0, 0.1)');

            var name = $('#name');
            var email = $('#email');
            var message = $('#message');
            var error = false;

            if (name.val().length === 0){
                name.css('border', '2px solid #398BCA');
                error = true;
            }
            if (email.val().length === 0 || ! validateEmail(email.val()) ){
                email.css('border', '2px solid #398BCA');
                error = true;
            }
            if (message.val().length === 0){
                message.css('border', '2px solid #398BCA');
                error = true;
            }
            if (!error) {
                $('#contactForm').submit();
                $('#submitBtn').attr("value", "Sending...");
            }
        });


    </script>

    <script src='https://www.google.com/recaptcha/api.js'></script>

